---
interface Props {
  label: string;
  value: string;
  description?: string;
}

const { label, value, description } = Astro.props;
---
<div class="flex items-center justify-between rounded-2xl border border-border/70 bg-surface/90 px-5 py-4">
  <div class="flex flex-col">
    <p class="text-sm font-semibold text-text-primary sm:text-base">{label}</p>
    {description && <p class="text-xs text-text-secondary">{description}</p>}
  </div>
  <div class="flex items-center gap-3 text-sm font-medium text-text-primary">
    <span>{value}</span>
    <span class="relative inline-flex h-6 w-12 items-center rounded-full bg-primary/15 ring-1 ring-primary/30">
      <span class="absolute left-1.5 h-4 w-4 rounded-full bg-primary shadow" aria-hidden="true" />
    </span>
  </div>
</div>
