---
interface Props { class?: string; }
const { class: className = '' } = Astro.props;
---
<div
  class:list={["signal-bar", className]}
  data-signal-bar
  role="separator"
  aria-hidden="true"
  style="width:100%;height:1px;background-color:var(--border);margin:2rem 0;transition:all 0.3s ease;"
></div>
