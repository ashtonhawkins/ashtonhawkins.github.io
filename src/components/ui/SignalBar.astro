---
interface Props {
  class?: string;
}
const { class: className = '' } = Astro.props;
---
<div class:list={["signal-bar", className]} role="separator" aria-hidden="true">
  <div class="signal-bar__scan"></div>
</div>

<style>
  .signal-bar {
    position: relative;
    width: 100%;
    height: 1px;
    background-color: var(--border);
    overflow: hidden;
    margin: 2rem 0;
  }
  .signal-bar__scan {
    position: absolute;
    top: 0;
    left: -30%;
    width: 30%;
    height: 100%;
    background: linear-gradient(90deg, transparent, var(--accent-primary), transparent);
    animation: scan 4s ease-in-out infinite;
  }
  @keyframes scan {
    0% { left: -30%; }
    100% { left: 100%; }
  }
  @media (prefers-reduced-motion: reduce) {
    .signal-bar__scan { animation: none; opacity: 0; }
  }
</style>
