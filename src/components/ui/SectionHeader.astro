---
interface Props {
  label: string;
  class?: string;
}
const { label, class: className = '' } = Astro.props;
---
<div class:list={["section-header", className]}>
  <span class="section-header__prefix" aria-hidden="true">//</span>
  <h2 class="section-header__label">{label}</h2>
</div>

<style>
  .section-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }
  .section-header__prefix {
    font-family: 'IBM Plex Mono', monospace;
    color: var(--accent-primary);
    font-weight: 400;
    font-size: 0.875rem;
  }
  .section-header__label {
    font-family: 'Space Grotesk Variable', sans-serif;
    text-transform: uppercase;
    letter-spacing: -0.03em;
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--text-primary);
    margin: 0;
  }
</style>
