---
import ThemeToggle from "./ThemeToggle.astro";
import ConfidentialToggle from "./ConfidentialToggle.astro";
import type { ConfidentialMode } from "../../utils/confidential";
const { hero, bioShort, initialMode } = Astro.props as {
  hero: { headline: string; subhead: string };
  bioShort: string;
  initialMode: ConfidentialMode;
};
---
<section id="hero-sentinel" class="relative flex flex-col gap-6 rounded-3xl border border-[color-mix(in_srgb,var(--ink)_10%,transparent)] bg-[var(--surface-alt)] p-8 shadow-lg shadow-black/10">
  <div class="flex flex-col gap-4 md:flex-row md:items-start md:justify-between">
    <div class="flex flex-col gap-4">
      <p class="text-xs uppercase tracking-[0.3em] text-[color-mix(in_srgb,var(--ink)_40%,transparent)]">Resume</p>
      <h1 class="text-4xl font-semibold leading-tight text-[var(--ink)] lg:text-5xl">{hero.headline}</h1>
      <p class="max-w-2xl text-lg text-[var(--ink-2)]">{hero.subhead}</p>
    </div>
    <div class="flex flex-col items-end gap-3 md:items-end">
      <ThemeToggle />
      <ConfidentialToggle initialMode={initialMode} />
    </div>
  </div>
  <div class="grid gap-6 md:grid-cols-[minmax(0,2fr)_minmax(0,1fr)]">
    <p class="text-base leading-relaxed text-[var(--ink)]">{bioShort}</p>
    <div class="rounded-2xl border border-dashed border-[color-mix(in_srgb,var(--ink)_12%,transparent)] bg-[color-mix(in_srgb,var(--ink)_4%,transparent)] p-4 text-sm text-[var(--ink-2)]">
      <p class="font-medium text-[var(--ink)]">Focus areas</p>
      <ul class="mt-3 grid grid-cols-2 gap-2 text-xs uppercase tracking-wide text-[var(--ink-2)]">
        <li>Experimentation</li>
        <li>Taxonomy</li>
        <li>Analytics</li>
        <li>Performance</li>
      </ul>
    </div>
  </div>
</section>
