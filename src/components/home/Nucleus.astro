---
import NucleusCanvas from '@components/home/NucleusCanvas.astro';
---

<div class="container-shell max-wide">
  <section class="nucleus" id="nucleus" aria-label="Nucleus" data-state="ambient">
    <div class="nucleus__frame" data-nucleus>
      <NucleusCanvas />
    </div>
  </section>

  <div class="nucleus-ticker" id="nucleus-ticker">
    <a class="nucleus-ticker__mode-label" href="/music">
      <span class="nucleus-ticker__mode-icon" aria-hidden="true">♫</span>
      <span class="nucleus-ticker__mode-name">LISTENING</span>
    </a>

    <div class="nucleus-ticker__stream">
      <div class="nucleus-ticker__scroll-content" id="nucleus-ticker-scroll">
        <span class="ticker-item ticker-item--text">NO DATA CACHED</span>
        <span class="ticker-sep" aria-hidden="true">·</span>
        <span class="ticker-item ticker-item--text">NO DATA CACHED</span>
        <span class="ticker-sep" aria-hidden="true">·</span>
      </div>
    </div>

    <div class="nucleus-ticker__controls">
      <button class="nucleus-ticker__arrow" id="nucleus-prev" aria-label="Previous mode">‹</button>
      <button class="nucleus-ticker__arrow" id="nucleus-next" aria-label="Next mode">›</button>
    </div>
  </div>
</div>

<style is:global>
  .nucleus {
    height: clamp(180px, 22vh, 320px);
    width: 100%;
    position: relative;
    overflow: hidden;
    border: 1px solid var(--border);
    margin-top: 0;
    margin-bottom: 0;
    background: var(--surface-primary);
  }

  .nucleus__frame {
    position: relative;
    height: 100%;
    width: 100%;
    background: var(--surface-primary);
  }

  .nucleus-ticker {
    width: 100%;
    height: 30px;
    display: flex;
    align-items: center;
    gap: 0;
    border-top: 1px solid var(--border);
    margin-top: 4px;
    padding-top: 4px;
    background: var(--surface-primary);
    overflow: hidden;
  }

  .nucleus-ticker__mode-label {
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 0 12px;
    height: 100%;
    flex-shrink: 0;
    text-decoration: none;
    white-space: nowrap;
    border-right: 1px solid var(--border);
    font-family: 'IBM Plex Mono', monospace;
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--text-primary);
    transition: color 0.15s ease;
  }

  .nucleus-ticker__mode-label:hover { color: var(--accent-primary); }
  .nucleus-ticker__mode-icon { margin-right: 4px; font-size: 10px; line-height: 1; }

  .nucleus-ticker__mode-name { line-height: 1; }

  .nucleus-ticker__stream {
    flex: 1;
    overflow: hidden;
    height: 100%;
    display: flex;
    align-items: center;
    mask-image: linear-gradient(to right, transparent 0%, black 24px, black calc(100% - 24px), transparent 100%);
    -webkit-mask-image: linear-gradient(to right, transparent 0%, black 24px, black calc(100% - 24px), transparent 100%);
  }

  .nucleus-ticker__scroll-content {
    display: flex;
    align-items: center;
    gap: 0;
    white-space: nowrap;
    animation: ticker-scroll 30s linear infinite;
  }

  .nucleus-ticker:hover .nucleus-ticker__scroll-content { animation-play-state: paused; }

  @keyframes ticker-scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  .ticker-item {
    white-space: nowrap;
    padding: 0 2px;
    display: inline-flex;
    align-items: baseline;
    gap: 0;
    font-size: 11px;
  }

  .ticker-item--numeric .ticker-val {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 12px;
    font-weight: 600;
    color: var(--text-primary);
  }

  .ticker-item--numeric .ticker-unit {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 10px;
    font-weight: 400;
    color: var(--text-tertiary);
    margin-left: 2px;
    text-transform: uppercase;
    letter-spacing: 0.06em;
  }

  .ticker-item--text {
    font-family: 'IBM Plex Sans', sans-serif;
    font-style: italic;
    color: var(--text-secondary);
    font-size: 11px;
    text-transform: none;
  }

  .ticker-item--chip {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 9px;
    letter-spacing: 0.06em;
    color: var(--text-secondary);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 3px;
    padding: 2px 6px;
    white-space: nowrap;
    line-height: 1.2;
  }

  .ticker-item--label {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 8px;
    letter-spacing: 0.1em;
    color: var(--text-tertiary);
    text-transform: uppercase;
    opacity: 0.6;
  }

  .ticker-sep {
    color: var(--text-tertiary);
    opacity: 0.25;
    margin: 0 10px;
    font-size: 8px;
  }

  .nucleus-ticker__scroll-content.entering .ticker-item {
    animation: ticker-item-enter 0.3s ease-out forwards;
    opacity: 0;
  }

  .nucleus-ticker__scroll-content.entering .ticker-item:nth-child(1) { animation-delay: 0s; }
  .nucleus-ticker__scroll-content.entering .ticker-item:nth-child(2) { animation-delay: 0.05s; }
  .nucleus-ticker__scroll-content.entering .ticker-item:nth-child(3) { animation-delay: 0.1s; }
  .nucleus-ticker__scroll-content.entering .ticker-item:nth-child(4) { animation-delay: 0.15s; }
  .nucleus-ticker__scroll-content.entering .ticker-item:nth-child(5) { animation-delay: 0.2s; }

  @keyframes ticker-item-enter {
    from { opacity: 0; transform: translateX(8px); }
    to { opacity: 1; transform: translateX(0); }
  }

  .nucleus-ticker__controls {
    display: flex;
    align-items: center;
    gap: 0;
    height: 100%;
    flex-shrink: 0;
    border-left: 1px solid var(--border);
  }

  .nucleus-ticker__arrow {
    appearance: none;
    -webkit-appearance: none;
    border: none;
    background: none;
    cursor: pointer;
    padding: 0 8px;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 14px;
    color: var(--text-tertiary);
    transition: color 0.1s ease, background 0.1s ease;
  }

  .nucleus-ticker__arrow:hover { color: var(--text-primary); background: rgba(255, 255, 255, 0.03); }

  .nucleus-ticker__arrow:focus-visible {
    outline: 1.5px solid var(--accent-primary);
    outline-offset: -1.5px;
  }

  .nucleus-ticker__arrow + .nucleus-ticker__arrow { border-left: 1px solid var(--border); }

  [data-theme="light"] .nucleus-ticker__arrow:hover,
  .light .nucleus-ticker__arrow:hover { background: rgba(0, 0, 0, 0.03); }

  @media (max-width: 640px) {
    .nucleus-ticker { height: 26px; }
    .nucleus-ticker__mode-label { padding: 0 8px; }
    .ticker-item { font-size: 10px; }
    .nucleus-ticker__arrow { padding: 0 6px; font-size: 12px; }
  }

  @media (prefers-reduced-motion: reduce) {
    .nucleus-ticker__scroll-content {
      animation: none;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }

    .nucleus-ticker__scroll-content.entering .ticker-item {
      animation: none;
      opacity: 1;
    }
  }
</style>
