---
import NucleusCanvas from '@components/home/NucleusCanvas.astro';
import feeds from '@data/feeds-cache.json';
import travel from '@data/travel.json';
import stravaActivities from '@data/strava/activities.json';
import tags from '@data/writing-tags.json';
import { getCollection } from 'astro:content';

const posts = await getCollection('writing', ({ data }) => !data.draft);
const thisYear = new Date().getFullYear();
const thisYearPosts = posts.filter((post) => post.data.pubDate && new Date(post.data.pubDate).getFullYear() === thisYear).length;
const totalWords = posts.reduce((sum, post) => sum + post.body.trim().split(/\s+/).filter(Boolean).length, 0);
const latest = posts.slice().sort((a, b) => new Date(b.data.pubDate ?? 0).getTime() - new Date(a.data.pubDate ?? 0).getTime())[0];
const writingStats = {
  thisYearPosts,
  totalWords,
  topTag: tags[0] ?? null,
  lastPublished: latest?.data.pubDate ?? null
};
---

<script define:vars={{ feeds, travel, writingStats, cyclingActivities: stravaActivities.data }}>
  window.__nucleusWatchingData = {
    thisYearCount: feeds?.watching?.stats?.totalFilms ?? null,
    totalFilms: feeds?.watching?.stats?.totalFilms ?? null,
    avgRating: feeds?.watching?.stats?.avgRating ?? null,
    topDecade: feeds?.watching?.recentItems?.[0]?.year ? `${Math.floor((feeds.watching.recentItems[0].year ?? 0) / 10) * 10}s` : null,
  };
  window.__nucleusListeningData = {
    weeklyPlays: feeds?.items?.lastfm?.length ?? 0,
    streakDays: null,
  };
  window.__nucleusWritingStats = writingStats;
  window.__nucleusTravelData = travel;
  window.__nucleusCyclingActivities = cyclingActivities ?? [];
</script>

<div class="container-shell max-wide">
  <section class="nucleus" id="nucleus" aria-label="Nucleus" data-state="ambient">
    <div class="nucleus__frame" data-nucleus>
      <NucleusCanvas />
    </div>
  </section>

  <div class="nucleus-ticker" id="nucleus-ticker">
    <div class="nucleus-ticker__source">
      <div class="nucleus-ticker__source-top">
        <span class="nucleus-ticker__led" id="ticker-led" aria-hidden="true"></span>
        <img class="nucleus-ticker__logo" id="ticker-service-logo" src="/icons/strava-mono.svg" alt="Strava" width="18" height="18" />
        <a class="nucleus-ticker__mode-name" href="/cycling" id="ticker-mode-name">CYCLING</a>
      </div>
      <span class="nucleus-ticker__mode-counter" id="ticker-mode-counter">4/6</span>
    </div>

    <div class="nucleus-ticker__stats" id="ticker-stats" aria-live="polite"></div>

    <div class="nucleus-ticker__nav">
      <button class="nucleus-ticker__arrow" id="nucleus-prev" aria-label="Previous mode">‹</button>
      <button class="nucleus-ticker__arrow" id="nucleus-next" aria-label="Next mode">›</button>
    </div>
  </div>
</div>

<style is:global>
  .nucleus { height: clamp(180px, 22vh, 320px); width: 100%; position: relative; overflow: hidden; border: 1px solid var(--border); border-bottom: none; margin: 0; background: var(--surface-primary); }
  .nucleus__frame { position: relative; height: 100%; width: 100%; background: var(--surface-primary); }

  .nucleus-ticker {
    display: flex;
    align-items: center;
    height: 52px;
    width: 100%;
    font-family: 'IBM Plex Mono', monospace;
    padding: 0 16px;
    background: rgba(255, 255, 255, 0.03);
    border-top: 1px solid rgba(255, 255, 255, 0.12);
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    margin-top: 6px;
  }

  .nucleus-ticker__source {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 2px;
    flex-shrink: 0;
    min-width: 140px;
    padding-right: 20px;
    border-right: 1px solid rgba(255, 255, 255, 0.08);
    margin-right: 8px;
  }

  .nucleus-ticker__source-top {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .nucleus-ticker__led {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--accent-primary);
    box-shadow: 0 0 4px var(--accent-primary),
                0 0 8px rgba(var(--accent-primary-rgb, 100, 160, 255), 0.3);
    animation: ledGlow 3s ease-in-out infinite;
    flex-shrink: 0;
  }

  @keyframes ledGlow {
    0%, 100% { opacity: 0.7; box-shadow: 0 0 4px var(--accent-primary); }
    50% { opacity: 1; box-shadow: 0 0 6px var(--accent-primary), 0 0 12px rgba(var(--accent-primary-rgb, 100, 160, 255), 0.4); }
  }

  .nucleus-ticker__logo {
    width: 18px;
    height: 18px;
    opacity: 0.75;
    filter: grayscale(100%) brightness(2.0);
    transition: opacity 0.4s ease, filter 0.4s ease;
  }

  .nucleus-ticker__source:hover .nucleus-ticker__logo {
    opacity: 1;
    filter: grayscale(100%) brightness(2.5);
  }

  .nucleus-ticker__mode-name {
    font-size: 11px;
    font-weight: 700;
    color: var(--text-primary);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    text-decoration: none;
    white-space: nowrap;
  }

  .nucleus-ticker__mode-name:hover {
    color: var(--accent-primary);
  }

  .nucleus-ticker__mode-counter {
    font-size: 10px;
    color: var(--text-tertiary);
    opacity: 0.6;
    padding-left: 22px;
  }

  .nucleus-ticker__stats {
    flex: 1;
    display: flex;
    align-items: center;
    gap: 0;
    min-width: 0;
    overflow: hidden;
    transition: opacity 0.3s ease;
  }

  .nucleus-ticker__stat-col {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    flex: 1;
    min-width: 0;
    padding: 0 12px;
    border-right: 1px solid rgba(255, 255, 255, 0.05);
  }

  .nucleus-ticker__stat-col:last-child {
    border-right: none;
  }

  .nucleus-ticker__stat-value {
    font-size: 16px;
    font-weight: 700;
    color: var(--text-primary);
    letter-spacing: -0.01em;
    font-variant-numeric: tabular-nums;
    line-height: 1.2;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 100%;
  }

  .nucleus-ticker__stat-label {
    font-size: 9px;
    font-weight: 400;
    color: var(--text-tertiary);
    letter-spacing: 0.04em;
    text-transform: lowercase;
    line-height: 1.2;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 100%;
  }

  .nucleus-ticker__nav {
    display: flex;
    align-items: center;
    gap: 4px;
    flex-shrink: 0;
    padding-left: 16px;
    border-left: 1px solid rgba(255, 255, 255, 0.08);
    margin-left: 8px;
  }

  .nucleus-ticker__arrow {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 24px;
    color: var(--text-tertiary);
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px 10px;
    line-height: 1;
    transition: color 0.2s ease;
    user-select: none;
    opacity: 0.6;
  }

  .nucleus-ticker__arrow:hover {
    color: var(--text-primary);
    opacity: 1;
  }

  .nucleus-ticker__arrow:active {
    color: var(--accent-primary);
  }

  @media (prefers-reduced-motion: reduce) {
    .nucleus-ticker__led {
      animation: none;
      opacity: 0.8;
    }

    .nucleus-ticker__stats {
      transition: none;
    }
  }

  :root[data-theme="light"] .nucleus-ticker {
    background: rgba(0, 0, 0, 0.02);
    border-top-color: rgba(0, 0, 0, 0.1);
    border-bottom-color: rgba(0, 0, 0, 0.05);
  }

  :root[data-theme="light"] .nucleus-ticker__stat-col {
    border-right-color: rgba(0, 0, 0, 0.06);
  }

  :root[data-theme="light"] .nucleus-ticker__source {
    border-right-color: rgba(0, 0, 0, 0.08);
  }

  :root[data-theme="light"] .nucleus-ticker__nav {
    border-left-color: rgba(0, 0, 0, 0.08);
  }

  :root[data-theme="light"] .nucleus-ticker__logo {
    filter: grayscale(100%) brightness(0.4);
  }
</style>
