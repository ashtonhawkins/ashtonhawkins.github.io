---
import NucleusCanvas from '@components/home/NucleusCanvas.astro';
---

<div class="container-shell max-wide">
  <section class="nucleus" id="nucleus" aria-label="Nucleus" data-state="ambient">
    <div class="nucleus__frame" data-nucleus>
      <NucleusCanvas />
    </div>
  </section>

  <div class="nucleus-ticker" id="nucleus-ticker">
    <a class="nucleus-ticker__label" href="/music">
      <span class="nucleus-ticker__icon" aria-hidden="true">♫</span>
      <span class="nucleus-ticker__name">LISTENING</span>
    </a>

    <div class="nucleus-ticker__stream">
      <div class="nucleus-ticker__scroll" id="nucleus-ticker-scroll">
        <span class="nucleus-ticker__item">NO DATA CACHED</span>
        <span class="nucleus-ticker__separator" aria-hidden="true">·</span>
        <span class="nucleus-ticker__item">NO DATA CACHED</span>
        <span class="nucleus-ticker__separator" aria-hidden="true">·</span>
      </div>
    </div>

    <div class="nucleus-ticker__controls">
      <button class="nucleus-ticker__arrow" id="nucleus-prev" aria-label="Previous mode">‹</button>
      <button class="nucleus-ticker__arrow" id="nucleus-next" aria-label="Next mode">›</button>
    </div>
  </div>
</div>

<style is:global>
  .nucleus {
    height: clamp(180px, 22vh, 320px);
    width: 100%;
    position: relative;
    overflow: hidden;
    border: 1px solid var(--border);
    border-bottom: none;
    margin-top: 0;
    margin-bottom: 0;
    background: var(--surface-primary);
  }

  .nucleus__frame {
    position: relative;
    height: 100%;
    width: 100%;
    background: var(--surface-primary);
  }

  .nucleus-ticker {
    width: 100%;
    height: 28px;
    display: flex;
    align-items: center;
    gap: 0;
    border: 1px solid var(--border);
    border-top: none;
    background: var(--surface-primary);
    overflow: hidden;
  }

  .nucleus-ticker__label {
    display: flex;
    align-items: center;
    gap: 5px;
    padding: 0 12px;
    height: 100%;
    flex-shrink: 0;
    text-decoration: none;
    color: inherit;
    border-right: 1px solid var(--border);
    transition: opacity 0.15s ease;
  }

  .nucleus-ticker__label:hover { opacity: 0.7; }
  .nucleus-ticker__icon { font-size: 10px; color: var(--accent-primary); line-height: 1; }

  .nucleus-ticker__name {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 9px;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--text-primary);
    line-height: 1;
    white-space: nowrap;
  }

  .nucleus-ticker__stream {
    flex: 1;
    overflow: hidden;
    height: 100%;
    display: flex;
    align-items: center;
    mask-image: linear-gradient(to right, transparent 0%, black 24px, black calc(100% - 24px), transparent 100%);
    -webkit-mask-image: linear-gradient(to right, transparent 0%, black 24px, black calc(100% - 24px), transparent 100%);
  }

  .nucleus-ticker__scroll {
    display: flex;
    align-items: center;
    gap: 0;
    white-space: nowrap;
    animation: ticker-scroll 30s linear infinite;
  }

  .nucleus-ticker:hover .nucleus-ticker__scroll { animation-play-state: paused; }

  @keyframes ticker-scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  .nucleus-ticker__item {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 10px;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    color: var(--text-secondary);
    white-space: nowrap;
    padding: 0 6px;
  }

  .nucleus-ticker__separator {
    color: var(--text-tertiary);
    opacity: 0.3;
    font-size: 10px;
    padding: 0 2px;
  }

  .nucleus-ticker__controls {
    display: flex;
    align-items: center;
    gap: 0;
    height: 100%;
    flex-shrink: 0;
    border-left: 1px solid var(--border);
  }

  .nucleus-ticker__arrow {
    appearance: none;
    -webkit-appearance: none;
    border: none;
    background: none;
    cursor: pointer;
    padding: 0 8px;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 14px;
    color: var(--text-tertiary);
    transition: color 0.1s ease, background 0.1s ease;
  }

  .nucleus-ticker__arrow:hover { color: var(--text-primary); background: rgba(255, 255, 255, 0.03); }

  .nucleus-ticker__arrow:focus-visible {
    outline: 1.5px solid var(--accent-primary);
    outline-offset: -1.5px;
  }

  .nucleus-ticker__arrow + .nucleus-ticker__arrow { border-left: 1px solid var(--border); }

  [data-theme="light"] .nucleus-ticker__arrow:hover,
  .light .nucleus-ticker__arrow:hover { background: rgba(0, 0, 0, 0.03); }

  @media (max-width: 640px) {
    .nucleus-ticker { height: 24px; }
    .nucleus-ticker__label { padding: 0 8px; }
    .nucleus-ticker__name { font-size: 8px; }
    .nucleus-ticker__item { font-size: 9px; }
    .nucleus-ticker__arrow { padding: 0 6px; font-size: 12px; }
  }

  @media (prefers-reduced-motion: reduce) {
    .nucleus-ticker__scroll {
      animation: none;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }
  }
</style>
