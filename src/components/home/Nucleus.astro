---
import NucleusCanvas from '@components/home/NucleusCanvas.astro';
---

<div class="container-shell max-wide">
  <section class="nucleus" id="nucleus" aria-label="Nucleus" data-state="ambient">
    <div class="nucleus__frame" data-nucleus>
      <NucleusCanvas />
    </div>

    <!-- Edge metadata — film frame markings -->
    <div class="nucleus__meta" id="nucleus-meta">
      <span class="nucleus__meta-item nucleus__meta--tl" data-field="label"></span>
      <span class="nucleus__meta-item nucleus__meta--tr" data-field="stat"></span>
      <span class="nucleus__meta-item nucleus__meta--bl" data-field="position"></span>
      <a class="nucleus__meta-item nucleus__meta--br" data-field="link" href="#">EXPLORE →</a>
    </div>
  </section>
</div>

<style is:global>
  .nucleus {
    height: clamp(180px, 22vh, 320px);
    width: 100%;
    position: relative;
    overflow: hidden;
    border: 1px solid var(--border);
    margin-top: 1rem;
    margin-bottom: 0;
    background: var(--surface-primary);
  }

  .nucleus__frame {
    position: relative;
    height: 100%;
    width: 100%;
    background: var(--surface-primary);
  }

  /* ══════════════════════════════════════
     EDGE METADATA — Film frame markings
     ══════════════════════════════════════ */

  .nucleus__meta {
    position: absolute;
    inset: 0;
    z-index: 5;
    pointer-events: none;
    padding: 12px 14px;
  }

  .nucleus__meta-item {
    position: absolute;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 9px;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--text-tertiary);
    opacity: 0.15;
    transition: opacity 0.6s ease;
    line-height: 1;
    white-space: nowrap;
  }

  /* Positions */
  .nucleus__meta--tl { top: 12px; left: 14px; }
  .nucleus__meta--tr { top: 12px; right: 14px; }
  .nucleus__meta--bl { bottom: 12px; left: 14px; }
  .nucleus__meta--br {
    bottom: 12px;
    right: 14px;
    pointer-events: auto;
    text-decoration: none;
    color: var(--text-tertiary);
  }

  /* ══════════════════════════════════════
     STATE TRANSITIONS via data-state
     ══════════════════════════════════════ */

  /* State 2: cursor entered — scanning */
  .nucleus[data-state="scanning"] .nucleus__meta-item {
    opacity: 0.35;
  }

  /* State 3: hovering zones — exploring */
  .nucleus[data-state="exploring"] .nucleus__meta-item {
    opacity: 0.5;
  }

  /* State 4: focused / locked */
  .nucleus[data-state="focused"] .nucleus__meta-item {
    opacity: 0.85;
    transition: opacity 0.3s ease;
  }

  .nucleus[data-state="focused"] .nucleus__meta--br {
    color: var(--accent-primary);
    cursor: pointer;
  }

  /* ══════════════════════════════════════
     FOCUSED STATE — Subtle vignette glow
     ══════════════════════════════════════ */

  .nucleus::after {
    content: '';
    position: absolute;
    inset: 0;
    border: 1px solid rgba(96, 165, 250, 0.2);
    box-shadow: inset 0 0 30px rgba(96, 165, 250, 0.05);
    pointer-events: none;
    z-index: 4;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .nucleus[data-state="focused"]::after {
    opacity: 1;
  }

  /* ══════════════════════════════════════
     CURSOR SCAN BEAM
     ══════════════════════════════════════ */

  .nucleus__scanbeam {
    position: absolute;
    width: 200px;
    height: 200px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(96, 165, 250, 0.04) 0%, transparent 70%);
    pointer-events: none;
    z-index: 3;
    transform: translate(-50%, -50%);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .nucleus[data-state="scanning"] .nucleus__scanbeam,
  .nucleus[data-state="exploring"] .nucleus__scanbeam {
    opacity: 1;
  }

  /* ══════════════════════════════════════
     MOBILE
     ══════════════════════════════════════ */

  @media (max-width: 640px) {
    .nucleus__meta-item {
      font-size: 8px;
      opacity: 0.35;
    }

    .nucleus__meta {
      padding: 8px 10px;
    }

    .nucleus__meta--tl { top: 8px; left: 10px; }
    .nucleus__meta--tr { top: 8px; right: 10px; }
    .nucleus__meta--bl { bottom: 8px; left: 10px; }
    .nucleus__meta--br { bottom: 8px; right: 10px; }
  }

  /* ══════════════════════════════════════
     REDUCED MOTION
     ══════════════════════════════════════ */

  @media (prefers-reduced-motion: reduce) {
    .nucleus__meta-item {
      transition: none;
    }
    .nucleus__scanbeam {
      display: none;
    }
    .nucleus::after {
      transition: none;
    }
  }
</style>
