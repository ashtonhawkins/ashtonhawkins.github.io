---
import NucleusCanvas from '@components/home/NucleusCanvas.astro';
import feeds from '@data/feeds-cache.json';
import travel from '@data/travel.json';
import stravaActivities from '@data/strava/activities.json';
import tags from '@data/writing-tags.json';
import { getCollection } from 'astro:content';

const posts = await getCollection('writing', ({ data }) => !data.draft);
const thisYear = new Date().getFullYear();
const thisYearPosts = posts.filter((post) => post.data.pubDate && new Date(post.data.pubDate).getFullYear() === thisYear).length;
const totalWords = posts.reduce((sum, post) => sum + post.body.trim().split(/\s+/).filter(Boolean).length, 0);
const latest = posts.slice().sort((a, b) => new Date(b.data.pubDate ?? 0).getTime() - new Date(a.data.pubDate ?? 0).getTime())[0];
const writingStats = {
  thisYearPosts,
  totalWords,
  topTag: tags[0] ?? null,
  lastPublished: latest?.data.pubDate ?? null
};
---

<script define:vars={{ feeds, travel, writingStats, cyclingActivities: stravaActivities.data }}>
  window.__nucleusWatchingData = {
    thisYearCount: feeds?.watching?.stats?.totalFilms ?? null,
    totalFilms: feeds?.watching?.stats?.totalFilms ?? null,
    avgRating: feeds?.watching?.stats?.avgRating ?? null,
    topDecade: feeds?.watching?.recentItems?.[0]?.year ? `${Math.floor((feeds.watching.recentItems[0].year ?? 0) / 10) * 10}s` : null,
  };
  window.__nucleusListeningData = {
    weeklyPlays: feeds?.items?.lastfm?.length ?? 0,
    streakDays: null,
  };
  window.__nucleusWritingStats = writingStats;
  window.__nucleusTravelData = travel;
  window.__nucleusCyclingActivities = cyclingActivities ?? [];
</script>

<div class="container-shell max-wide">
  <section class="nucleus" id="nucleus" aria-label="Nucleus" data-state="ambient">
    <div class="nucleus__frame" data-nucleus>
      <NucleusCanvas />
    </div>
  </section>

  <div class="nucleus-ticker" id="nucleus-ticker">
    <div class="nucleus-ticker__source">
      <img class="nucleus-ticker__logo" src="/icons/lastfm-mono.svg" alt="Last.fm" width="16" height="16" id="ticker-service-logo" />
      <a class="nucleus-ticker__mode-name" href="/music" id="ticker-mode-name">LISTENING</a>
      <span class="nucleus-ticker__mode-counter" id="ticker-mode-counter">1/6</span>
    </div>

    <div class="nucleus-ticker__transmission" aria-live="polite">
      <svg class="nucleus-ticker__signal" width="20" height="20" viewBox="0 0 20 20" aria-hidden="true">
        <circle cx="10" cy="10" r="3" fill="var(--accent-primary)" id="ticker-signal-dot" />
        <circle cx="10" cy="10" r="3" fill="none" stroke="var(--accent-primary)" stroke-width="1" opacity="0" id="ticker-signal-ring" />
      </svg>

      <div class="nucleus-ticker__stat nucleus-ticker__stat--visible" id="ticker-stat">
        <span class="nucleus-ticker__stat-value" id="ticker-stat-value">—</span>
        <span class="nucleus-ticker__stat-unit" id="ticker-stat-unit"></span>
      </div>
    </div>

    <div class="nucleus-ticker__nav">
      <button class="nucleus-ticker__arrow" id="nucleus-prev" aria-label="Previous mode">‹</button>
      <button class="nucleus-ticker__arrow" id="nucleus-next" aria-label="Next mode">›</button>
    </div>
  </div>
</div>

<style is:global>
  .nucleus { height: clamp(180px, 22vh, 320px); width: 100%; position: relative; overflow: hidden; border: 1px solid var(--border); border-bottom: none; margin: 0; background: var(--surface-primary); }
  .nucleus__frame { position: relative; height: 100%; width: 100%; background: var(--surface-primary); }

  .nucleus-ticker { display:flex; align-items:center; height:48px; width:100%; border-top:1px solid rgba(255,255,255,.08); margin-top:6px; background:var(--surface-primary); font-family:'IBM Plex Mono',monospace; padding:0 16px; }

  .nucleus-ticker__source { display:flex; align-items:center; gap:8px; flex-shrink:0; min-width:160px; padding-right:16px; }
  .nucleus-ticker__logo { width:16px; height:16px; opacity:.6; filter:grayscale(100%) brightness(1.5); transition:opacity .4s ease, filter .4s ease; color:var(--text-secondary); }
  .nucleus-ticker__source:hover .nucleus-ticker__logo { opacity:.85; }
  .nucleus-ticker__mode-name { font-size:11px; font-weight:600; color:var(--text-primary); text-transform:uppercase; letter-spacing:.08em; text-decoration:none; }
  .nucleus-ticker__mode-name:hover { color:var(--accent-primary); }
  .nucleus-ticker__mode-counter { font-size:9px; color:var(--text-tertiary); opacity:.5; }

  .nucleus-ticker__transmission { flex:1; display:flex; align-items:center; gap:12px; min-width:0; }
  .nucleus-ticker__signal { flex-shrink:0; }
  .nucleus-ticker__stat { display:flex; align-items:baseline; gap:6px; transition:opacity .4s ease, transform .4s ease; min-width:0; }
  .nucleus-ticker__stat-value { font-size:18px; font-weight:700; color:var(--text-primary); letter-spacing:-.01em; font-variant-numeric:tabular-nums; line-height:1; text-wrap:balance; }
  .nucleus-ticker__stat-unit { font-size:12px; font-weight:400; color:var(--text-secondary); letter-spacing:.02em; }
  .nucleus-ticker__stat--entering { opacity:0; transform:translateY(4px); }
  .nucleus-ticker__stat--visible { opacity:1; transform:translateY(0); }
  .nucleus-ticker__stat--exiting { opacity:0; transform:translateY(-2px); }

  .nucleus-ticker__nav { display:flex; align-items:center; gap:2px; flex-shrink:0; padding-left:16px; }
  .nucleus-ticker__arrow { appearance:none; border:none; background:none; cursor:pointer; font-family:'IBM Plex Mono',monospace; font-size:16px; color:var(--text-tertiary); padding:4px 6px; transition:color .2s ease; }
  .nucleus-ticker__arrow:hover { color:var(--text-primary); }
  .nucleus-ticker__arrow:focus-visible { outline:1.5px solid var(--accent-primary); outline-offset:1px; }

  @media (prefers-reduced-motion: reduce) {
    .nucleus-ticker__stat, .nucleus-ticker__logo { transition:none !important; }
    #ticker-signal-ring { display:none; }
  }
</style>
