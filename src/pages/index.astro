---
import Base from '@layouts/Base.astro';
---

<Base
  title="Ashton Hawkins — Coming Soon"
  description="New site loading. Ashton Hawkins — web experience, optimization, and digital operations."
>
  <main class="coming-soon" aria-label="Coming soon page">
    <div class="coming-soon__content">
      <p class="coming-soon__monogram crt-glow">AH</p>
      <h1 class="coming-soon__name">Ashton Hawkins</h1>
      <p class="coming-soon__status">
        Something new is loading...
        <span class="coming-soon__cursor" aria-hidden="true"></span>
      </p>
    </div>
  </main>
</Base>

<style>
  .coming-soon {
    min-height: 100dvh;
    display: grid;
    place-items: center;
    padding: 1.5rem;
    background: var(--bg-primary);
  }

  .coming-soon__content {
    width: 100%;
    max-width: 32rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.65rem;
    opacity: 0;
    animation: fade-in 800ms ease-out forwards;
  }

  .coming-soon__monogram {
    margin: 0;
    font-family: 'JetBrains Mono Variable', 'JetBrains Mono', ui-monospace, monospace;
    font-size: 2.25rem;
    line-height: 1;
    color: var(--text-primary);
  }

  .coming-soon__name {
    margin: 0;
    font-family: 'Space Grotesk Variable', 'Space Grotesk', 'Inter Variable', sans-serif;
    font-size: 1.5rem;
    line-height: 1.2;
    color: var(--text-primary);
    letter-spacing: -0.015em;
  }

  .coming-soon__status {
    margin: 0;
    display: inline-flex;
    align-items: baseline;
    gap: 0.3rem;
    font-family: 'Inter Variable', 'Inter', system-ui, sans-serif;
    font-size: 1rem;
    color: var(--text-secondary);
  }

  .coming-soon__cursor {
    width: 0.56ch;
    height: 1em;
    background: var(--accent-primary);
    display: inline-block;
    animation: cursor-blink 1s steps(1, end) infinite;
  }

  @keyframes cursor-blink {
    0%,
    49% {
      opacity: 1;
    }

    50%,
    100% {
      opacity: 0;
    }
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }

    to {
      opacity: 1;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .coming-soon__content {
      animation: none;
      opacity: 1;
    }

    .coming-soon__cursor {
      animation: none;
      opacity: 1;
    }
  }
</style>
