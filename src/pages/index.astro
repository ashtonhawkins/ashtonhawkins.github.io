---
import Base from '@layouts/Base.astro';
import Cursor from '@components/ui/Cursor.astro';
---

<Base
  title="Ashton Hawkins — Coming Soon"
  description="New site loading. Ashton Hawkins — web experience, optimization, and digital operations."
>
  <main class="coming-soon" aria-label="Coming soon page">
    <div class="coming-soon__content">
      <h1 class="coming-soon__name">
        ASHTON HAWKINS
        <Cursor />
      </h1>
      <p class="coming-soon__status">Something new is loading...</p>
    </div>
  </main>
</Base>

<style>
  .coming-soon {
    min-height: 100dvh;
    display: grid;
    place-items: center;
    padding: 1.5rem;
    background: var(--bg-primary);
  }

  .coming-soon__content {
    width: 100%;
    max-width: 32rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.65rem;
    opacity: 0;
    animation: fade-in 800ms ease-out forwards;
  }

  .coming-soon__name {
    margin: 0;
    font-family: 'Space Grotesk Variable', sans-serif;
    font-size: 1.5rem;
    line-height: 1.2;
    color: var(--text-primary);
    letter-spacing: -0.03em;
  }

  .coming-soon__status {
    margin: 0;
    font-family: 'IBM Plex Sans', system-ui, sans-serif;
    font-size: 1rem;
    color: var(--text-secondary);
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }

    to {
      opacity: 1;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .coming-soon__content {
      animation: none;
      opacity: 1;
    }
  }
</style>
